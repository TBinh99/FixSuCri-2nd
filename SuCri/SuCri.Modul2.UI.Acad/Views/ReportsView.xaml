                    <TextBlock
                        FontWeight="Normal" 
                        FontFamily="MontSerrat" 
                        TextAlignment="Center"
                        FontSize="11" 
                        Foreground="{DynamicResource plainTextColor3}" 
                        Text="{Binding BomDWGText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

