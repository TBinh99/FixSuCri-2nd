        <materialDesign:Card Grid.Row="1" Grid.Column="1"

                            Height="130">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="100" />
                    <RowDefinition
                         Height="*" />
                </Grid.RowDefinitions>
                <Image
      Width="100"
      Height="100"
      Source="pack://application:,,,/SuCri.Modul2.UI.Acad;component/Images/Buttonpics/Button1_Seite 7.png"
      Stretch="UniformToFill" />
                <Button
                    Command="{Binding ExportBOMPRJCommand}"
      Grid.Row="0"
