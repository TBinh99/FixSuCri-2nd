                        FontFamily="MontSerrat" 
                        TextAlignment="Center"
                        FontSize="11" 
                        Foreground="{DynamicResource plainTextColor3}" 
                        Text="{Binding SetTotalHeightOptionText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                </StackPanel>
            </Grid>
