                        Text="{Binding LoadMTOFilterText, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    </TextBlock>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <materialDesign:Card Grid.Row="0" Grid.Column="1"

                            Height="130">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition
                        Height="100" />
                    <RowDefinition
                         Height="*" />
